@inherits ProfModal
@if (show)
{
  <div class="modal fade show d-block " id="exampleModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Profil</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"
            @onclick="() => OnShowChanged(false)">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="d-flex justify-content-center">
            <a href="#" @onclick="() => OnShowChanged(false)" class="btn btn-primary btn-icon-split">
              <span class="icon text-white-50">
                <i class="fas fa-user"></i>
              </span>
              <span class="text">Edytuj Profil</span>
            </a>

          </div>
          <div class="d-flex justify-content-center">
            <a href="logout" @onclick="() => OnShowChanged(false)" class="btn btn-secondary btn-icon-split">
              <span class="icon text-white-50">
                <i class="fas fa-arrow-right"></i>
              </span>
              <span class="text">Wyloguj</span>
            </a>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="modal-backdrop fade show"></div>
}
<style>
  .modal {
    color: black;
  }
</style>
